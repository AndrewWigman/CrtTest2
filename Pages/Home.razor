                    <li>[03:04:00] MODULE: Solar System loaded</li>
                </ul>
            </div>
        </article>

        <!-- Wide bottom: Quick Actions -->
        <article class="panel span-3">
            <div class="panel-header">QUICK ACTIONS</div>
            <div class="panel-body actions">
                <button class="btn">Generate Creature</button>
                <button class="btn">Open Gerber</button>
                <button class="btn">Open Reports</button>
                <button class="btn">System Settings</button>
                <button class="btn ghost">Reboot Node</button>
            </div>
        </article>
    </div>
</section>

@page "/"

<section class="crt-home">
    <header class="home-title">
        <h1 data-text="WELCOME">WELCOME</h1>
        <div class="subtitle">System Console v0.1 • ONLINE</div>
    </header>

    <div class="home-grid">
        <!-- Left: Status -->
        <article class="panel">
            <div class="panel-header">SYSTEM STATUS</div>
            <div class="panel-body">
                <ul class="kv">
                    <li><span>Star Date</span><b>49212.4</b></li>
                    <li><span>Uptime</span><b>03:17:42</b></li>
                    <li><span>Nodes</span><b>14 ONLINE</b></li>
                    <li><span>Warnings</span><b>0</b></li>
                    <li><span>Temp</span><b>42.6°C</b></li>
                </ul>
                <div class="meter">
                    <label>CPU</label>
                    <div class="bar"><i style="width:62%"></i></div>
                    <label>MEM</label>
                    <div class="bar"><i style="width:48%"></i></div>
                    <label>NET</label>
                    <div class="bar"><i style="width:21%"></i></div>
                </div>
            </div>
        </article>

        <!-- Middle: Modules -->
        <article class="panel">
            <div class="panel-header">MODULES</div>
            <div class="panel-body modules">
                <a class="chip" href="#">WorldWeave</a>
                <a class="chip" href="#">Fauna</a>
                <a class="chip" href="#">Flora</a>
                <a class="chip" href="#">Alchemy</a>
                <a class="chip" href="#">Solar System</a>
                <a class="chip" href="#">Reports</a>
                <a class="chip" href="#">Gerber Viewer</a>
                <a class="chip" href="#">Kanban</a>
                <a class="chip" href="#">Flow Editor</a>
                <a class="chip" href="#">Settings</a>
            </div>
        </article>

        <!-- Right: Event Log (scrolls internally) -->
        <article class="panel">
            <div class="panel-header">EVENT LOG</div>
            <div class="panel-body scrollbox">
                <ul class="log">
                    <li>[03:17:41] LINK-UP: Node-07 authenticated</li>
                    <li>[03:16:09] SCANLINE: jitter corrected</li>
